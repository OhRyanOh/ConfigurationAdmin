{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "allowSyntheticDefaultImports": true,
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "curly": false,
    "quotemark": [
      true,
      "double"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": false,
    "member-ordering": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "one-line": false,
    "no-consecutive-blank-lines": false,
    "no-console": false,
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ]
  }
}